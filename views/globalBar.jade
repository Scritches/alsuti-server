mixin mainMenu
  div.menu
    span#alsuti
    div.menu-wrapper
      div.menu-content
        a(href='/upload') Upload
        a(href='/paste') Paste
        a(href='/rehost') Rehost

mixin userMenu
  div.menu
    div.menu-wrapper
      div.menu-content
        -if(session.admin)
          a(href='/admin') Admin
        a(href='/invites') Invites
        a(href='/password') Password

div#globalBar.hpad
  -if(session.validate())
    mixin mainMenu
    span.divider
    a(href='/private') Private
    span.divider
    a(href='/public') Public
    span.floatRight.hpad
      a(href='/settings') Settings
      span.divider
      a(href='/logout') Log out
  -else
    span#alsuti.noMenu
    span.divider
    a(href='/public') Public
    span.floatRight
      a(href='/login') Log In
