doctype html
html
  head
    title= title
    -if(encrypted)
      link(rel='stylesheet', href='../stylesheets/style.css')
      script(type='text/javascript' src='../js/lib/jquery.min.js')
      script(type='text/javascript' src='../js/lib/aes.js')
      script(type='text/javascript' src='../js/main.js')
      script(type='text/javascript').
        var encrypted=true;
        var cipherText="!{content}";
    -else
      link(rel='stylesheet', href='./stylesheets/style.css')
      script(type='text/javascript' src='./js/lib/jquery.min.js')
      script(type='text/javascript' src='./js/lib/aes.js')
      script(type='text/javascript' src='./js/main.js')
      script(type='text/javascript').
        var encrypted=false;
    link(rel='stylesheet' href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.2.0/styles/default.min.css')
    script(src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.2.0/highlight.min.js')
    script(type='text/javascript').
      var fileName="!{fileName}";
  body
    div#decryptThings(style='display:none;')
      h1 Decrypt File
      p Password:
      input(id='password' type='password')

      button#decryptButton(onclick='decrypt()') Decrypt
    a#downloadButton(style='display:none;') Download
    br 
    p#message(style='display:none')
    center
      img#image(style='display:none;width:80%;')
    pre
      code#content #{content}
